{% if node.children is defined and node.children|length > 0 %}
    <li class="dropdown">
        <a href="{{ node.linkPlain }}" class="dropdown-toggle" data-toggle="dropdown">
            {{ node.title }}<b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            {% for child in node.children %}
                {% include 'MFBCmsBundle:Menu:sub.html.twig'
                with {'node': child}
                %}
            {% endfor %}
        </ul>
    </li>
{% else %}
    <li>
        <a href="{{ node.linkPlain }}">{{ node.title }}</a>
    </li>
{% endif %}