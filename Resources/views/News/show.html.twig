{% extends '::layout_pages.html.twig' %}


{% block title %}{{ news.title }}{% endblock %}

{% block content %}

    <strong>{{ "News from"|trans }} <time>{{ news.releasedAt|date("d.m.Y") }}</time></strong>
    <div class="category">{{ post.category.title }}</div>
    <h2>{{ news.title }}</h2>
    <summary><strong>{{ news.subTitle | cmsrender }}</strong></summary>

    <article>{{ news.content | cmsrender }}</article><br/><br/>

    by {{ news.author.username }}

    <hr/>


{% endblock %}
