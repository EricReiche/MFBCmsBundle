<div class="addGallery">
    <button class="btn btn-primary" onclick="addGallery({{ id }}, '{{ type }}');$('#gallerymodal').modal('hide');return false;" >{{ 'Add gallery'|trans}}</button>
</div>
<br/>
{% for file in files %}
    <div class="image">
        <img onclick="addImage({{ file.id }})" src="{{ asset('bundles/sonataadmin/famfamfam/image_add.png') }}"  alt="{{ 'Add thumbnail'|trans}}" />
        <img onclick="addImageLink({{ file.id }})" src="{{ asset('bundles/sonataadmin/famfamfam/image_link.png') }}"  alt="{{ 'Add thumbnail with link'|trans}}" /><br/>

        <img src="{{ img(file.id, 160, 160) }}"/>
    </div>
{% endfor %}
