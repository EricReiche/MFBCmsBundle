{% extends 'SonataAdminBundle:CRUD:base_list.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/mfbcms/skin/ui.dynatree.css') }}" type="text/css" media="all">
{% endblock%}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/mfbcms/js/jquery.dynatree.min.js') }}" type="text/javascript"></script>
{% endblock%}

{% block list_table %}
    <div id="tree"></div>
    <script type="text/javascript">
        $("#tree").dynatree({
            initAjax: {url: "{{ admin.generateUrl('ajax_tree') }}",
                data: {key: "root", // Optional arguments to append to the url
                    mode: "all"
                }
            }
        });
    </script>
{% endblock %}
